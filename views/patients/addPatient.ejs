<!DOCTYPE html>
<html>
  <head>
    <title>Add  New Data</title>
    <%- include('../partials/header.ejs') %>
    <link rel="stylesheet" src="style.css" />
    <script>
      if ($('.nav-item').hasClass('active')) {
        $('.nav-item').removeClass('active');
        $('#AddCovid').addClass('active');
      }
    </script>
  </head>

  <style>
    .container1 {
    width: 100%;
    height: 100%;
    padding: 20px 30px;
    overflow: hidden;
    background-size: cover;
    /* background-color: aliceblue; */
    color: black;
}
  </style>
  <body>
    <div class="container1">
      <h3><a  class="btn btn-primary" href="/patients"> Covid 19 Till Date</a></h3>
      <h1>Create New Entry</h1>
      <form action="/patients/save" method="post">
        <table class="covid_table">
          <tbody>
            <tr>
              <td>ObservationDate</td>
              <td><input class="form-control" required="" type="Date" name="ObservationDate" /></td>
            </tr>
            <tr>
              <td>Province</td>
              <td><textarea  class="form-control" required="" name="Province"></textarea></td>
            </tr>
            <tr>
              <td>Country</td>
              <td><input  class="form-control" required="" type="text" name="Country" /></td>
            </tr>
              <td>Confirmed</td>
              <td><input  class="form-control" required="" type="number" name="Confirmed" /></td>
            </tr>
            <tr>
              <td>Deaths</td>
              <td><input class="form-control"  required="" type="number" name="Deaths" /></td>
            </tr>
            <tr>
              <td>Recovered</td>
              <td><input class="form-control"  required="" type="number" name="Recovered" /></td>
            </tr>
            <tr>
              <td colspan="2"><button class="btn btn-success" type="submit" value="Save">Save</button></td>
            </tr>
          </tbody>
        </table>
      </form>
    </div>
  </body>
</html>