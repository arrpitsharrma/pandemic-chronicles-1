<!DOCTYPE html>
<html>
  <head>
    <title>Edit Data Entry</title>
    <%- include('../partials/header.ejs') %>
    <link rel="stylesheet" src="style.css" />
    <script>
      if ($('.nav-item').hasClass('active')) {
        $('.nav-item').removeClass('active');
        $('#AddCovid').addClass('active');
      }
    </script>
        <style>
          .container1 {
            width: 100%;
        height: 100%;
        padding: 20px 30px;
overflow: hidden;
margin-top: 40px;
        background-size: cover;
        /* background-color: aliceblue; */
        color: black;
    }
</style>    
  </head>
  <body>
    <div class="container1">
      <h3><a  class="btn btn-primary" href="/patients"> Covid 19 Till Date</a></h3>
      <h1>Edit Data</h1>
      <form action="/patients/update/<%= patient._id%>" method="post">
        <table>
          <tbody>
            <tr>
              <td>ObservationDate</td>
              <td>
                <input class="form-control"
                  type="Date"
                  name="ObservationDate"
                  required=""
                  value="<%= patient.ObservationDate %>"
                />
              </td>
            </tr>
            <tr>
              <td>Province</td>
              <td>
                <textarea class="form-control" name="Province"><%= patient.Province %></textarea>
              </td>
            </tr>
            <tr>
              <td>Country</td>
              <td>
                <input class="form-control"
                  type="text"
                  name="Country"
                  required=""
                  value="<%= patient.Country %>"
                />
              </td>
            </tr>

            <tr>
              <td>Confirmed</td>
              <td>
                <input class="form-control"
                  type="number"
                  name="Confirmed"
                  required=""
                  value="<%= patient.Confirmed %>"
                />
              </td>
            </tr>

            <tr>
              <td>Deaths</td>
              <td>
                <input class="form-control"
                  type="number"
                  name="Deaths"
                  required=""
                  value="<%= patient.Deaths %>"
                />
              </td>
            </tr>

            <tr>
              <td>Recovered</td>
              <td>
                <input class="form-control"
                  type="number"
                  name="Recovered"
                  required=""
                  value="<%= patient.Recovered %>"
                />
              </td>
            </tr>
            <tr>
              <td colspan="2"><button class="btn btn-success" type="submit">Update</button></td>
            </tr>
          </tbody>
        </table>
      </form>
    </div>
  </body>
</html>