<!DOCTYPE html>
<html>
  <head>
    <title>Patients Detail</title>
    <%- include('../partials/header.ejs') %>
    <link rel="stylesheet" src="style.css" />
  </head>
  <body>
    <div class="topnav">
      <a href="/protectedhome">Disasters</a>
      <a href="/faq">FAQ's</a>
      <a href="/explore">Explore</a>
      <a href="/resources">Resources</a>
      <a class="active" href="/patients">Covid19</a>
      <a href="/dashboard">Dashboard</a>
    </div>
    <div class="container">
      <h3><a href="/patients">Covid 19 Till Date</a></h3>
      <h1>Display Detail</h1>
      <table>
        <tbody>
          <tr>
            <td>ObservationDate</td>
            <td>:</td>
            <td><%= patient.ObservationDate %></td>
          </tr>
          <tr>
            <td>Province</td>
            <td>:</td>
            <td><%= patient.Province %></td>
          </tr>
          <tr>
            <td>Country</td>
            <td>:</td>
            <td><%= patient.Country %></td>
          </tr>
          
            <td>Confirmed</td>
            <td>:</td>
            <td><%= patient.Confirmed %></td>
          </tr>
          <tr>
            <td>Deaths</td>
            <td>:</td>
            <td><%= patient.Deaths %></td>
          </tr>
          <tr>
            <td>Recovered</td>
            <td>:</td>
            <td><%= patient.Recovered %></td>
          </tr>
        </tbody>
      </table>
      <h3><a href="/patients/edit/<%= patient._id%>">EDIT</a></h3>
      <form action="/patients/delete/<%= patient._id%>" method="post">
        <button type="submit">DELETE</button>
      </form>
    </div>
  </body>
</html>