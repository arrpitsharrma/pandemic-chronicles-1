<%- include('./partials/header.ejs') %>
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>
<script src="https://unpkg.com/chartkick@3.2.0/dist/chartkick.js"></script>

<style>
.organization-container {
  width: 100%;
  height: 100%;
  padding: 20px 30px;
  overflow: hidden;
  background-size: cover;
  background-color: aliceblue;
  color: black;
}
</style>
<link rel="stylesheet" href="../css/pandemic.css">
<div class="organization-container">
    <div class="row center-row-top">
        <input type="hidden" value="<%= data.name %>" id="source" />
        <center><img id="img-circle" class="img-circle" width="140" height="140" /></center>
        <script>
            var source = "../images/Heath Organizations/" + document.getElementById("source").value + ".jpg";
            document.querySelector('.img-circle').setAttribute('src', source);
        </script>
        
        <h1><%= data.name %></h1>
    </div>


    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Focus</th>
                <td><%=data.focus%></td>
            </tr>
            <tr>
                <th>Type</th>
                <td><%=data.type%></td>
            </tr>
            <tr>
                <th>Headquarters</th>
                <td><%=data.Headquarters%></td>
            </tr>
            <tr>
                <th>Budget</th>
                <td><%=data.budget%></td>
            </tr>
            <tr>
                <th>Description</th>
                <td><%=data.description%></td>
            </tr>
        </tbody>
    </table>
</div>


<script>
    if ($('.nav-item').hasClass('active')) {
        $('.nav-item').removeClass('active');
        $('#organizations_dropdown').addClass('active');
    }

</script>